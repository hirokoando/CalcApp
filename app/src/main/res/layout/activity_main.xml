<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="数値１" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:inputType="number|numberDecimal|numberSigned"
        android:id="@+id/figure1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数値２"
        android:layout_below="@id/figure1"
        android:id="@id/text2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:inputType = "number|numberDecimal|numberSigned"
        android:id="@+id/figure2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/figure2"
        android:background="@android:color/holo_red_light"
        android:text=" + "
        android:textSize="30sp"
        android:id="@+id/button1plus"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/figure2"
        android:layout_toRightOf="@+id/button1plus"
        android:background="@android:color/holo_blue_dark"
        android:text=" － "
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/button2minus"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/figure2"
        android:layout_toRightOf="@+id/button2minus"
        android:background="@android:color/holo_green_dark"
        android:text=" × "
        android:textSize="30sp"
        android:id="@+id/button3multi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/figure2"
        android:layout_toRightOf="@+id/button3multi"
        android:background="@android:color/holo_purple"
        android:text=" ÷ "
        android:textSize="30sp"
        android:id="@+id/button4division"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1plus"
        android:text=" "
        android:textSize="30sp"
        android:id="@+id/errorText"/>


</RelativeLayout>